%h1 Students
%ul.nav.nav-list
  %li.divider

.row
  .span7
    - 
    %table.table.table-striped
      %tr
        %th Name
        %th Group
        %th School
        %th
        %th
        - @students.each do |student|
          %tr
            %td
              = "#{student.first_name} #{student.last_name}"
            %td
              = "#{student.groups.first.teacher_first_name} #{student.groups.first.teacher_last_name}"
            %td
              = student.school.name
            %td
              %span.label.label-info
                %i.icon-edit
                = link_to 'Edit', edit_student_path(student), class: "button_link"
            %td
              %span.label.label-important
                %i.icon-trash
                = link_to 'Delete', student_path(student), method: 'delete', class: "button_link", data: {confirm: "Are you sure?"}
